/* pages/index/ChooseSchool.wxss */


/* 灯泡img */
.bulb{
  position:absolute;margin-left: 15%;margin-top: 8%;
  width:9%;
  height:19%;
}
/* 背景img */
.Picture{
  width:100%;
  height:100%;
}
/* 标题 */
.Title{
	margin-left: 27%;
	color: #000000;
	margin-top: 8%;
	font-size: 3vw;
	position:absolute; 
	z-index:2; 
	top:7%
}


/* 背景图的view*/
.PictureView{  
	left: 0rpx;
	position:absolute;
	width: 100%;
	height: 300rpx;
}
/* 省份、州市、学校 标题蓝条*/
.MidView{
	position:absolute;
	left: 0px;
	width: 100%;
	height: 11%;
	background-color: #66CCFF;
}
/* 省份、州市、学校的选择view*/
.LowView{
	position:absolute;
	background-color: #ffffff;
	left: 0px;
	width: 100%;
	height: 50%;
	margin-top: 15%;
}
/* “省份”、“州市”、“学校” 的按钮*/
.MidButton{
	background-color: #66CCFF;
	font-size: 3vw;
	position: relative;
	border:none;
	text-align: center;
	display: inline-block;
	padding: 15px 32px;
	height: 100%;
	width: 32%;
	box-shadow: 0 1px 5px 0 rgba(0,0,0,0.2), 0 5px 5px 0 rgba(0,0,0,0.1);
}
/* 下方选项按钮View */
.ItemView{
	left: 0px;
	width: 100%;
	height: 50px;
}
/* 下方选项按钮 */
.ItemButton{
	background-color: #ffffff;
	color:#000000;
	font-size: 3vw;
	border:none;
	display: inline-block;
	padding: 13px;
	margin-top: 1%;
	box-shadow: 0 1px 1px 0 rgba(0,0,0,0.1), 0 1px 2px 0 rgba(0,0,0,0.1);
	width:100%;
}
